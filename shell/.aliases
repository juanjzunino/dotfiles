# Editor
alias vim='nvim'

# Open files
alias finder="open -R"

# Listing options
alias ls="exa -a"
alias l="exa -la"

# Tree options
alias tree="exa --tree"
alias mtree="exa --tree --long"

# Sane defaults
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# Send files to trash
alias ts="trash"

# Git
alias gs="git status"
alias gg="git graph"
alias gu="git pull"

# Jupyter Notebooks
alias jn="jupyter notebook"

# Folder's shortcuts
alias docs="cd ~/Documents"
alias desk="cd ~/Desktop"
alias loads="cd ~/Downloads"
alias book="cd ~/Documents/Books"
alias books="cd ~/Documents/Books"
alias paper="cd ~/Documents/Papers"
alias papers="cd ~/Documents/Papers"
alias mooc="cd ~/Documents/MOOC"
alias basb="cd ~/Documents/Obsidian"
alias mim="cd ~/Documents/business-analytics"
alias thesis="cd ~/Documents/business-analytics/Thesis"
alias para="cd ~/Documents/PARA"
