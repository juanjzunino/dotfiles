# Editor
alias vim='nvim'

# Open files
alias finder="open -R"

# Listing options
alias ls="exa -a"
alias l="exa -la"

# Tree options
alias tree="exa --tree"
alias mtree="exa --tree --long"

# Sane defaults
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# Git
alias gs="git status"
alias gg="git log --graph --pretty=oneline"
alias gu="git pull"

# Jupyter Notebooks
alias jn="jupyter notebook"

# Folder's shortcuts
alias docs="cd ~/Documents"
alias desk="cd ~/Desktop"
alias loads="cd ~/Downloads"
alias project="cd ~/Documents/project"
alias books="cd ~/Documents/Resources/Books"
alias papers="cd ~/Documents/Resources/Papers"
alias mim="cd ~/Documents/MiM+Analytics"
alias lectures="cd ~/Documents/Knowledge/Lectures"
alias thesis="cd ~/Documents/MiM+Analytics/Thesis"
