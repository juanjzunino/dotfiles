# Editor
alias vim='nvim'

# Open files
alias finder="open -R"

# Listing options
alias ls="exa -a --icons"
alias l="exa -la"

# Tree options
alias tree="exa --tree"
alias mtree="exa --tree --long"

# Sane defaults
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# Git
alias gs="git status"
alias gg="git log --graph --pretty=oneline"
alias gu="git pull"

# Jupyter Notebooks
alias jn="jupyter notebook"

# Folder's shortcuts
alias desk="cd ~/Desktop"
alias loads="cd ~/Downloads"
alias docs="cd ~/Documents"
alias dev="cd ~/Documents/dev"
alias project="cd ~/Documents/project"
alias lectures="cd ~/Documents/knowledge/lectures"
alias books="cd ~/Documents/resources/books"
alias papers="cd ~/Documents/resources/papers"
alias mim="cd ~/Documents/knowledge/MiM+Analytics"
alias thesis="cd ~/Documents/knowledge/MiM+Analytics/Thesis"
